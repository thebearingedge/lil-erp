{
  "private": true,
  "name": "lil-erp",
  "version": "1.0.0",
  "description": "A Small Business ERP.",
  "main": "index.js",
  "engines": {
    "node": ">=7.2.0",
    "npm": ">=3.10.9"
  },
  "scripts": {
    "lint": "eslint api db _db",
    "test": "mocha --harmony-async-await -r babel-register api/**/*.test.js",
    "tdd": "npm run db:seed && npm t -s -- -w -R min",
    "cover": "nyc npm t -s",
    "check": "nyc check-coverage",
    "db:status": "careen",
    "db:make": "careen -C",
    "db:up": "careen -A --all",
    "db:down": "careen -R -t ixgk6g09",
    "db:cycle": "run-s -s db:down db:up",
    "db:watch": "onchange 'db/migrations/*.sql' -- run-s db:cycle",
    "_db": "babel-node --harmony-async-await node_modules/.bin/knex --cwd _db/",
    "_db:make": "npm run -s _db migrate:make",
    "_db:up": "npm run -s _db migrate:latest",
    "_db:down": "npm run -s _db migrate:rollback",
    "_db:seed": "npm run -s _db seed:run",
    "precommit": "run-s -s lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/lil-erp.git"
  },
  "keywords": [],
  "author": "Tim Davis",
  "license": "LicenseRef-LICENSE",
  "bugs": {
    "url": "https://github.com/thebearingedge/lil-erp/issues"
  },
  "homepage": "https://github.com/thebearingedge/lil-erp#readme",
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.18.0",
    "babel-plugin-transform-export-extensions": "6.8.0",
    "babel-plugin-transform-object-rest-spread": "6.20.2",
    "bluebird": "3.4.7",
    "careen": "0.1.1",
    "chai": "3.5.0",
    "chai-struct": "2.1.1",
    "eslint": "3.12.2",
    "husky": "0.12.0",
    "mocha": "3.2.0",
    "npm-run-all": "3.1.2",
    "nyc": "10.0.0",
    "onchange": "3.2.1",
    "uuid": "3.0.1"
  },
  "dependencies": {
    "deep-clone": "3.0.2",
    "fs-promise": "1.0.0",
    "global": "4.3.1",
    "knex": "0.12.6",
    "lodash": "4.17.4",
    "pg": "6.1.2"
  }
}
